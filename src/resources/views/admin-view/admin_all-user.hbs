{{#section 'css'}}
<link rel="stylesheet" href="/css/admin_css/all_user.css">
{{/section}}

{{#section 'title'}}Admin - All User{{/section}}

{{#section 'javascript'}}
<script src="/js/admin_js/pagination.min.js"></script>
<script src="/js/admin_js/user.js"></script>
{{/section}}


<div>
    <div id="wrapper" style='display: flex;'>
        {{>admin_nav}}
        <div class="content-page" style="width:83%">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                        <li class="breadcrumb-item active">All User</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">All User</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-hover">
                            <thead class="sticky-top">
                                <tr class="tieude">
                                    <th scope="col">User ID</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Registration Date</th>
                                    <th style="text-align:center" scope="col">Tools</th>
                                </tr>
                            </thead>
                            <tbody id="conten_tb">
                                {{#each data}}
                                <tr id="{{this.username}}">
                                    <td>{{this.username}}</td>
                                    <td>{{this.fullname}}</td>
                                    <td>{{this.email}}</td>
                                    <td style="text-align:center">{{this.ngaytao}}</td>
                                    <td class="tools">
                                        <i onclick="xoa('{{this.username}}')" class="fas fa-trash"
                                            style="color: red;"></i>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <div id="trang"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>