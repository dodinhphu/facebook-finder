{{#section 'css'}}
<link rel="stylesheet" href="/css/admin_css/notification.css">
{{/section}}

{{#section 'title'}}Admin -Notification{{/section}}

{{#section 'javascript'}}
<script src="/js/admin_js/pagination.min.js"></script>
<script src="/js/admin_js/notification.js"></script>
{{/section}}


<div>
    <div id="wrapper" style='display: flex;'>
        {{>admin_nav}}
        <div class="content-page" style="width:83%">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                        <li class="breadcrumb-item active">Notifications</li>
                                    </ol>
                                </div>
                                <h4 class="page-title">Notifications</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop">
                                Add Notification
                                <i class="fas fa-plus-circle"></i>
                            </button>
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Add Notification</h5>
                                            <button onclick="reset()" type="button" class="btn-close"
                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div id="body_module" class="modal-body">
                                            <div id="form_nhap" class="form">
                                                <div class="title">
                                                    <input onfocus="an()" id="txt_tieude" class="form-control"
                                                        type="text" placeholder="Titel Notification"
                                                        aria-label="default input example">
                                                    <span id='tb__td' class="_tb"></span>
                                                </div>
                                                <div class="selecter">
                                                    <select onfocus="an()" id="txt_loai" class="form-select"
                                                        aria-label="Default select example">
                                                        <option value="1" selected>Thông Báo</option>
                                                        <option value="2">Yêu Cầu</option>
                                                        <option value="3">Cảnh Báo</option>
                                                        <option value="0">Khác</option>
                                                    </select>
                                                    <span id='tb__loai' class="_tb"></span>
                                                </div>
                                                <div class="noidung">
                                                    <textarea onfocus="an()" id="txt_noidung"
                                                        placeholder="Content Notification" class="form-control"
                                                        id="exampleFormControlTextarea1" rows="3"></textarea>
                                                    <span id='tb__nd' class="_tb"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button onclick="reset()" id="btn_close" type="button"
                                                class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button onclick="them()" id="btn_them" type="button"
                                                class="btn btn-primary">Add</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead class="sticky-top" style="background: #39f;>
                                <tr class=" tieude">
                                <th style="text-align:center" scope="col">Type</th>
                                <th scope="col">Titel</th>
                                <th scope="col">Content</th>
                                <th scope="col">Time</th>
                                <th style="text-align:center" scope="col">Tools</th>
                                </tr>
                            </thead>
                            <tbody id="conten_tb">
                                {{#each data}}
                                <tr id="{{this.id}}">
                                    <td style="text-align:center">{{{phan_loai this.loai}}}</td>
                                    <td>{{this.tieude}}</td>
                                    <td style="max-width: 770px;">{{this.noidung}}</td>
                                    <td>{{this.thoigian}}</td>
                                    <td class="tools">
                                        <i onclick="xoa('{{this.id}}')" class="fas fa-trash"
                                            style="color: red;text-align:center"></i>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <div id="trang"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>